---
parser: babel-eslint


plugins:
  - babel
  - react


env:
  browser: true
  node: true


globals:
  __CLIENT__: true
  __SERVER__: true
  __DEV__: true
  __DEVTOOLS__: true
  ga: true


ecmaFeatures:
  arrowFunctions: true
  binaryLiterals: false
  blockBindings: true
  classes: true
  defaultParams: true
  destructuring: true
  forOf: true
  generators: false
  modules: true
  objectLiteralComputedProperties: true
  objectLiteralDuplicateProperties: false
  objectLiteralShorthandMethods: true
  objectLiteralShorthandProperties: true
  octalLiterals: false
  regexUFlag: false
  regexYFlag: false
  restParams: true
  spread: true
  superInFunctions: false
  templateStrings: true
  unicodeCodePointEscapes: false
  globalReturn: false
  jsx: true


rules:

  ### ECMAScript 6
  arrow-parens: 0
  babel/arrow-parens: [1, as-needed]
  arrow-spacing: [1, { before: true, after: true }]
  constructor-super: 2
  generator-star-spacing: [1, before]
  no-class-assign: 2
  no-const-assign: 2
  no-this-before-super: 2
  no-var: 2
  object-shorthand: [1, methods]
  prefer-const: 1
  prefer-spread: 1
  prefer-reflect: 0
  require-yield: 1

  ### React
  react/display-name: 0
  react/jsx-boolean-value: [1, always]
  react/jsx-curly-spacing: [1, never]
  react/jsx-no-duplicate-props: [2, { ignoreCase: true }]
  react/jsx-no-undef: 2
  react/jsx-quotes: [1, double]
  react/jsx-sort-prop-types: 0
  react/jsx-sort-props: 0
  react/jsx-uses-react: 2
  react/jsx-uses-vars: 2
  react/no-danger: 0
  react/no-did-mount-set-state: 1
  react/no-did-update-set-state: 0
  react/no-multi-comp: 2
  react/no-unknown-property: 2
  react/prop-types: 1
  react/react-in-jsx-scope: 2
  react/require-extension: [1, { extensions: [.js, .jsx] }]
  react/self-closing-comp: 2
  react/sort-comp: 0                                                            # Should be 1. `statics` should be on top.
  react/wrap-multilines: 2

  ### Node.js
  callback-return: [2, [callback, cb, next]]
  handle-callback-err: [2, ^(err|error)$]
  no-mixed-requires: [1, false]
  no-new-require: 2
  no-path-concat: 2
  no-process-exit: 2
  no-restricted-modules: 0
  no-sync: 2

  ### Possible errors
  comma-dangle: [2, never]
  no-cond-assign: [2, always]
  no-console: 1
  no-constant-condition: 2
  no-control-regex: 2
  no-debugger: 2
  no-dupe-args: 2
  no-dupe-keys: 2
  no-duplicate-case: 2
  no-empty: 2
  no-empty-character-class: 2
  no-ex-assign: 2
  no-extra-boolean-cast: 1
  no-extra-parens: [1, functions]
  no-extra-semi: 1
  no-func-assign: 2
  no-inner-declarations: [2, functions]
  no-invalid-regexp: 2
  no-irregular-whitespace: 2
  no-negated-in-lhs: 2
  no-obj-calls: 2
  no-regex-spaces: 2
  no-sparse-arrays: 2
  no-unreachable: 2
  use-isnan: 2
  valid-jsdoc: 0
  valid-typeof: 2

  ### Best practices
  block-scoped-var: 2
  complexity: 0
  consistent-return: 0
  curly: [1, multi-line]
  default-case: 0
  dot-notation: 0
  eqeqeq: 2
  guard-for-in: 2
  no-alert: 2
  no-caller: 2
  no-div-regex: 1
  no-else-return: 0
  no-empty-label: 2
  no-eq-null: 2
  no-eval: 2
  no-extend-native: 1
  no-extra-bind: 1
  no-fallthrough: 2
  no-floating-decimal: 2
  no-implicit-coercion: [1, { boolean: false, number: true, string: true }]
  no-implied-eval: 2
  no-invalid-this: 0
  no-iterator: 1
  no-labels: 0
  no-lone-blocks: 0
  no-loop-func: 2
  no-multi-spaces: 0
  no-multi-str: 1
  no-native-reassign: 2
  no-new: 2
  no-new-func: 2
  no-new-wrappers: 2
  no-octal: 2
  no-octal-escape: 2
  no-process-env: 2
  no-proto: 2
  no-redeclare: 2
  no-return-assign: 2
  no-script-url: 2
  no-self-compare: 2
  no-sequences: 2
  no-throw-literal: 2
  no-unused-expressions: 2
  no-useless-call: 1
  no-void: 2
  no-warning-comments: 0
  no-with: 2
  radix: 1
  vars-on-top: 0
  wrap-iife: [2, any]
  yoda: 0
  strict: [2, global]

  ### Variables
  init-declarations: 0
  no-catch-shadow: 1
  no-delete-var: 2
  no-label-var: 2
  no-shadow: 1
  no-shadow-restricted-names: 2
  no-undef: 2
  no-undef-init: 2
  no-undefined: 2
  no-unused-vars: [2, { vars: all, args: none }]
  no-use-before-define: 2

  ### Stylistic issues
  indent: [1, 2, { SwitchCase: 1, VariableDeclarator: 2 }]
  brace-style: [2, 1tbs, { allowSingleLine: true }]
  camelcase: 2
  comma-spacing: [2, { before: false, after: true }]
  comma-style: [2, last]
  consistent-this: [1, self]
  eol-last: 1
  func-names: 0
  func-style: 0
  id-length: [1, { min: 2, max: 40, exceptions: [e, i] }]
  key-spacing: [0, { align: colon, beforeColon: false, afterColon: true }]      # Should be 1. Eslint bug with `align: colon`.
  max-nested-callbacks: [2, 3]
  new-cap: 1
  new-parens: 0
  no-array-constructor: 2
  no-inline-comments: 0
  no-lonely-if: 2
  no-mixed-spaces-and-tabs: 1
  no-multiple-empty-lines: [2, { max: 3 }]
  no-nested-ternary: 2
  no-new-object: 2
  no-spaced-func: 2
  no-ternary: 0
  no-trailing-spaces: 1
  no-underscore-dangle: 0
  one-var: 0
  operator-assignment: [2, always]
  padded-blocks: 0
  quote-props: [2, consistent]
  quotes: [2, single, avoid-escape]
  semi: [0, always]                                                             # Should be 2, but export () => {} ;(
  semi-spacing: [2, { before: false, after: true }]
  sort-vars: 0
  space-after-keywords: [2, always]
  space-before-blocks: [2, always]
  space-before-function-paren: [2, { anonymous: never, named: never }]
  space-in-brackets: 0
  space-in-parens: [1, never]
  space-infix-ops: 1
  space-return-throw-case: 2
  space-unary-ops: [1, { words: true, nonwords: false }]
  spaced-comment: [1, always]
  wrap-regex: 2

  ### Legacy
  max-depth: [1, 4]
  max-params: [1, 4]
  no-bitwise: 2
